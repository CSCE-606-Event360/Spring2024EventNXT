<h1>Refer a Friend</h1>

<%= form_with url: referral_creation_path(event_id: @event.id), local: true do |form| %>
  <div>
    <%= form.label :friend_email, "Friend's Email Address" %>
    <%= form.email_field :friend_email, required: true %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>
